<!DOCTYPE html>
<html>
  <head>
    <title>Exam2019</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js" integrity="sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js" integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM" crossorigin="anonymous"></script>
  </head>

  <body>
  <header>

    <nav class="navbar navbar-expand-lg navbar-light" style="background-color: #e3f2fd;">

    <div class="collapse navbar-collapse" id="navbarColor03">
      <ul class="navbar-nav mr-auto">
        <li class="nav-item active">
          <a class="nav-link" href="/">Z-mobile <span class="sr-only">(current)</span></a>
        </li>
      </ul>
        <form class="form-inline">
  
        <%if user_signed_in?%>
         
          <ul class="navbar-nav mr-auto">
            <li>
              <%= link_to edit_registration_path(current_user) , class: "nav-item" ,title:"Settings" do%>
                 <button class="btn btn-outline-primary my-2 my-sm-0" type="submit"><%=current_user.name%></button>
              <% end -%>
            </li>
            <li class="nav-item active">
              <%= link_to shopping_cart_path  do%>
                <button class="btn btn-outline-primary my-2 my-sm-0" type="button">Cart</button>
              <% end %>
            </li>
            <li class="nav-item active">
              <%= link_to destroy_user_session_path, method: :delete  do%>
                <button class="btn btn-outline-primary my-2 my-sm-0" type="button">log out</button>
              <% end %>
            </li>
        
          </ul>
        <%else%>
          <%= link_to new_user_session_path do%>
            <button class="btn btn-outline-primary my-2 my-sm-0" type="button">log in</button>
          <% end %>
        <% end %>        
      </form>
    </div>

  </nav>
</header>

<div class="container">
  <nav class="navbar navbar-expand-md navbar-light" style="background-color: #aae5ff;">

    <a class="nav-link" href="/">Handset </a>
    <a class="nav-link" href="/">Prepay option</a>
    <a class="nav-link" href="/">Subscription </a>

  </nav>
  <div class="row">
  <div class="col-md-2">

  </div>

  <div class="col-md-9" >
    
    <%= yield %>
  </div>
  <div class="col-md-9" ></div>


  </div>
        
</div>
  </body>
</html>
